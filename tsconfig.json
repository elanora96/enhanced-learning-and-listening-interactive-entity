{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["typings.d.ts", "**/*.ts"],
  "exclude": ["node_modules"]
}
